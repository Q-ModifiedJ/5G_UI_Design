<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ly_tab_menu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ly_tab_menu_overview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tab_menu_overview"
                    style="@style/tab_menu_text"
                    android:drawableTop="@drawable/tab_menu_overview"
                    android:text="概览" />

                <TextView
                    android:id="@+id/tab_menu_overview_point"
                    style="@style/tab_menu_point"
                    android:layout_toRightOf="@+id/tab_menu_overview"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_tab_menu_area"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tab_menu_area"
                    style="@style/tab_menu_text"
                    android:drawableTop="@drawable/tab_menu_area"
                    android:text="区域" />

                <TextView
                    android:id="@+id/tab_menu_area_point"
                    style="@style/tab_menu_point"
                    android:layout_toRightOf="@+id/tab_menu_area"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_tab_menu_equipment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tab_menu_equipment"
                    style="@style/tab_menu_text"
                    android:drawableTop="@drawable/tab_menu_equipment"
                    android:text="设备" />

                <TextView
                    android:id="@+id/tab_menu_equipment_point"
                    style="@style/tab_menu_point"
                    android:layout_toRightOf="@+id/tab_menu_equipment"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_tab_menu_base_station"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tab_menu_base_station"
                    style="@style/tab_menu_text"
                    android:drawableTop="@drawable/tab_menu_base_station"
                    android:text="基站" />

                <TextView
                    android:id="@+id/tab_menu_base_station_point"
                    style="@style/tab_menu_point"
                    android:layout_toRightOf="@id/tab_menu_base_station"
                    android:visibility="gone" />

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_above="@id/ly_tab_menu"
        android:background="@color/gray" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_above="@id/div_tab_bar"/>

</RelativeLayout>