<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myapplication.UIDesign">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Area.Area_Details"></activity>
        <activity
            android:name=".Overview.OverviewActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Area.AreaActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="com.myapplication.UIDesign.Area.AreaActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Equipment.EquipmentActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="com.myapplication.UIDesign.Equipment.EquipmentActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BaseStation.BaseStationActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="com.myapplication.UIDesign.BaseStation.BaseStationActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".BaseStation.BaseStationInfoActivity">
            <intent-filter>
                <action android:name="com.myapplication.UIDesign.BaseStation.BaseStationInfoActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>