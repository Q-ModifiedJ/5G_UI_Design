<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--    第一块，接入设备上线状态统计-->
        <FrameLayout
            android:id="@+id/area_details_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/area_details_text_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="接入设备上线状态统计"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/area_details_image1.1_"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/circle"/>

                    <ImageView
                        android:id="@+id/area_details_image1.2_"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/circle"/>


                </LinearLayout>
            </LinearLayout>

        </FrameLayout>

        <!--    第二块，基站业务状态统计-->
        <FrameLayout
            android:id="@+id/area_details_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="311dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/area_details_text_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="基站业务状态统计" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/area_details_image2.1_"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/circle" />

                    <TextView
                        android:id="@+id/area_details_text2.1_"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:singleLine="false"
                        android:text="\n\nOnline 100\n\n\nFailure 4\n\n\nPlanning30"/>

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <!--    第三块，资源池利用率统计-->
        <FrameLayout
            android:id="@+id/area_details_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/area_details_text_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="资源池利用率状态统计"/>

            </LinearLayout>
        </FrameLayout>


    </LinearLayout>
</ScrollView>